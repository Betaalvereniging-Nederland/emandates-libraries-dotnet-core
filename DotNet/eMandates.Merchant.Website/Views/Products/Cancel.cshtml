@model eMandates.Merchant.Library.CancellationRequest

@{
    ViewBag.Title = "Cancel";
}

<h2>Transaction</h2>

<div>
    <hr />

    @using (Html.BeginForm("CancelMandateResult", "Products", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="container">
            <p class="help-block">Transaction information</p>
            <div class="form-group row">
                <div class="col-3">
                    @Html.LabelFor(m => m.EntranceCode)
                    @Html.TextBoxFor(m => m.EntranceCode, new { @class = "form-control" })
                </div>
                <div class="col-3">
                    @Html.LabelFor(m => m.ExpirationPeriod)
                    @Html.TextBoxFor(m => m.ExpirationPeriod, new { @class = "form-control" })
                </div>
                <div class="col-3">
                    @Html.LabelFor(m => m.Language)
                    @Html.DropDownListFor(m => m.Language, new SelectList(new[] { "en", "nl", "ro", "it" }, "en"), new { @class = "form-control" })
                </div>
            </div>
            <hr />
            <p class="help-block">eMandate information</p>
            <div class="form-group row">
                <div class="col-3">
                    @Html.LabelFor(m => m.DebtorBankId)
                    @Html.TextBoxFor(m => m.DebtorBankId, new { @class = "form-control" })
                </div>
                <div class="col-3">
                    @Html.LabelFor(m => m.DebtorReference)
                    @Html.TextBoxFor(m => m.DebtorReference, new { @class = "form-control" })
                </div>
                <div class="col-3">
                    @Html.LabelFor(m => m.EMandateId)
                    @Html.TextBoxFor(m => m.EMandateId, new { @class = "form-control" })
                </div>
                <div class="col-2">
                    @Html.LabelFor(m => m.MessageId)
                    @Html.TextBoxFor(m => m.MessageId, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    @Html.LabelFor(m => m.SequenceType)
                    @Html.DropDownListFor(m => m.SequenceType, new SelectList(new[] { "OOFF", "RCUR" }), new { @class = "form-control" })
                </div>
                <div class="col-3">
                    @Html.LabelFor(m => m.EMandateReason)
                    @Html.TextBoxFor(m => m.EMandateReason, new { @class = "form-control" })
                </div>
                <div class="col-3">
                    @Html.LabelFor(m => m.PurchaseId)
                    @Html.TextBoxFor(m => m.PurchaseId, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    @Html.LabelFor(m => m.OriginalIban)
                    @Html.TextBoxFor(m => m.OriginalIban, new { @class = "form-control" })
                </div>
                <div class="col-3">
                    @Html.LabelFor(m => m.MaxAmount)
                    @Html.TextBoxFor(m => m.MaxAmount, new { @class = "form-control" })
                </div>
            </div>
            <hr />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Send cancellation request</button>
        </div>
    }
</div>